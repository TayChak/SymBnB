{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
    <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3 mt-4">
                <h1 class="text-center">Connectez Vous !</h1>
                {% if hasError %}
                    <div class="alert alert-danger">
                    Une erreur est surevenue, le nom d'utilisateur ou le mot de passe est incorrecte
                    </div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="text" name="_username" id="email" class="form-control" 
                            placeholder="Adresse E-mail" required value='{{ username }}'>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" 
                            placeholder="Mot de passe" required>
                    </div>
                     <input type="hidden" name="_csrf_token" value="{{ csrf_token('login') }}"/>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success mt-3">
                            <i class="fas fa-sign-in-alt"></i>
                                Login
                        </button>
                    </div>
                </form>
            </div>      
        </div>
    </div>
</div>

{% endblock %}