{% set url = path('ads_show', {'slug' : ad.slug }) %}
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header text-center">
                {{ ad.rooms }} chambres , <strong>{{ ad.price }}&euro; / nuit </strong> <br>
                    {% if ad.comments|length > 0 %}
                        {% include 'layouts/rating.html.twig' with {'rating': ad.avgRatings} %}
                    {% else %}
                        <small>Pas encore not√©</small>
                    {% endif %}
            </div>
            <a href="{{ url }}">
                <img src="{{ ad.coverImage }}" alt="Image de l'appartement" 
                    style="height: 200px; width: 100%; display: block">
            </a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="{{ url }}" style="text-decoration: none; color: #ffffff">
                        {{ ad.title }}
                    </a>
                </h4>
                <p class="card-text">
                    {{ ad.introduction }}
                </p>
                <div class="text-center">
                    <a href="{{ url }}" class="btn btn-light">En savoir plus !</a>
                    {% if app.user is same as (ad.author) %}
                    <a href="{{path('ads_update', {'slug' : ad.slug })}}" class="btn btn-danger">
                        Modifier l'annonce
                    </a>
                    {% endif %}
                </div>
                        
            </div>
        </div>
    </div>