{% extends 'base.html.twig' %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}

<div class="title" style="background-image: url({{ ad.coverImage }})">
    <div class="container">
        <h1>{{ ad.title }}</h1>
        <p>{{ ad.introduction }}</p>
        <p class="h2">
            <strong>{{ ad.rooms }} chambres </strong> pour <strong> {{ ad.price }} &euro;
            </strong> par nuit
        </p>
        <div class="text-center">
            <a href="#" class="btn btn-primary">RÃ©server !</a>
        </div>
    </div> 
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ ad.description | raw }}
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    {% for image in ad.images %}
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" 
                            {% if loop.first %} class="active" {% endif %} aria-current="true" aria-label="Slide 1"></button>
                    {% endfor %}
                </div>
                <div class="carousel-inner">
                    {% for image in ad.images %}
                    <div class="carousel-item {% if loop.first %}active {% endif %}">
                        <img src="{{ image.url }}" class="d-block w-100" alt="">
                         <div class="carousel-caption d-none d-md-block">
                            <h5>{{ ad.title }}</h5>
                            <p>{{ image.caption }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col">
        {% set author = ad.author %}
            <div class="row">
                <div class="col-3">
                    <a href={{ path('show_user', {'slug' : author.slug }) }}>
                        <img src="{{ author.picture}}" class="avatar avatar-medium" alt="Avatar de {{ author.fullName}}">
                    </a>
                </div>
                <div class="col">
                    <h3><a href={{ path('show_user', {'slug' : author.slug }) }}>{{ author.fullName}}</a></h3>
                    <span class="badge bg-info">{{ author.ads|length }} annonces</span>
                </div>
            </div>
            <div class="row mt-3">
                {{ author.description|raw }}
            </div>
        </div>
    </div>
</div>

{% endblock %}